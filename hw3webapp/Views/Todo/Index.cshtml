@model hw3webapp.Models.UserAndItems

@{
    ViewData["Title"] = "All Your Todos";
}

@{
    List<TodoItem> allItems = Model.items;
    string username = Model.user.username;
    //allItems.Remove(allItems.Last());
}

<!DOCTYPE html>
<html>

<head></head>
<body>
<span class="bg-inverse text-white"><h2>All Your Todos</h2></span>
<h5>Hello @username!</h5>

<a class="btn btn-primary" asp-action="Create"><span class="glyphicon glyphicon-plus"></span> Create New</a> &nbsp;&nbsp;
<a class="btn btn-success" asp-action="SeeCompleted"><span class="glyphicon glyphicon-ok"></span> View Completed</a> <br /><br />


@foreach (var todoItem in allItems)
{
    if(!todoItem.IsCompleted){
        <div class="item">
            @*
            <h4>@todoItem.Text</h4> @daysLeft(todoItem.DateCreated, todoItem.DateDue) <br/>
            @todoItem.DateCreated.Date.ToString("dd.MM.yyyy.")<br/> *@
            @Html.Partial("SingleTodoItem",todoItem)
            
        </div>
     }
}

<a class="btn btn-success" asp-controller="User" asp-action="LogOut"><span class="glyphicon glyphicon-log-out"></span> Log out!</a>

</body>
</html>





